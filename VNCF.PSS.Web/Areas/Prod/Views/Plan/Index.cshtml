            <vxe-column field="PlanDate" title="計劃單日期" width="100"></vxe-column>
            <vxe-column field="GoodsID" title="物料編號" width="160"></vxe-column>
            <vxe-column field="GoodsCname" title="物料描述" width="260"></vxe-column>
            <vxe-column field="CreateUser" title="建立人" width="80"></vxe-column>
