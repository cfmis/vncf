            <div style="float:right;width:30%;">
                <vxe-button type="text" icon="fa fa-search" @@click="searchByProductMo(searchProductMo)" style="height:25px;margin-top:5px">查詢</vxe-button>
            </div>
        </div>
    </div>
    
    @*<p style="background-color:aqua;margin:0;">abc</p>*@
    <!--選擇主表或明細表-->
    <div style="float:left;width:100%;height:35px;margin:0px;margin-top:0px;">
        @*<div style="height:25px;margin:0px;margin-top:10px;">*@
            <vxe-radio-group v-model="selectTab">
                <vxe-radio-button label="tab1" content="生產主表" size="mini"></vxe-radio-button>
                <vxe-radio-button label="tab2" content="生產明細表" size="mini"></vxe-radio-button>
