<div id="app">
    <!--工具欄-->
    <div style="height:35px;width:100%;margin-top:-12px;background-color:gainsboro;">
        <div style="float:left;width:80%;">
            <vxe-toolbar perfect size="medium" style="height:35px;background-color:gainsboro;">
                <template #buttons>
                    <vxe-button type="text" icon="fa fa-plus" content="新增" @@click="addNew()"></vxe-button>
                    <vxe-button type="text" icon="fa fa-save" content="儲存" @@click="saveEvent()"></vxe-button>
                    <vxe-button type="text" icon="fa fa-search" content="查詢" @@click="clickSearchEvent()"></vxe-button>
                    <vxe-button type="text" icon="fa fa-print" content="列印" @@click="printEvent()"></vxe-button>
                    <vxe-button type="text" icon="fa fa-arrow-circle-up" content="批準" @@click="saveEvent()"></vxe-button>
                    <vxe-button type="text" icon="fa fa-copy" content="翻單" @@click="clickCopyEvent()"></vxe-button>
                    <vxe-button type="text" icon="fa fa-trash-o" content="删除"></vxe-button>
                </template>
            </vxe-toolbar>
        </div>
        <div style="float:right;width:20%;">
            <div style="float:left;width:60%;">
                <vxe-input v-model="searchProductMo" placeholder="請輸入制單編號" style="height:20px;margin-top:6px;font-size:9px"></vxe-input>
