                        <template #default="{ data }">
                            <vxe-input v-model="data.GoodsCname" disabled class="input-customize"></vxe-input>
                        </template>
                    </vxe-form-item>
                    <vxe-form-item title="訂單數量" field="OrderQty" :item-render="{}" span="6" class="vxe-form-item-customize">
