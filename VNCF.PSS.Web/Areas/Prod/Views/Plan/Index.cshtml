    <!--查找窗口-->
    <vxe-modal ref="xModalSearch" v-model="showSearch" title="查詢" width="800" height="600" resize destroy-on-close>
        <template #default>
            <vxe-form :data="searchParasData" title-align="right" title-width="100" @@submit="searchPlan()" style="margin-top:-20px">
                <vxe-form-item align="left" span="24" style="margin-top:30px">
                    <template #default>
                        <vxe-button type="submit" status="primary">查詢</vxe-button>
                        <vxe-button @@click="$refs.xModalSearch.close()">關閉</vxe-button>
                    </template>
                </vxe-form-item>
                <vxe-form-item title="制單編號" field="ProductMo" span="12" :item-render="{}">
                    <template #default="{ data }">
                        <vxe-input v-model="data.ProductMoFrom" style="width:40%"></vxe-input>
                        <vxe-input v-model="data.ProductMoTo" style="width:40%"></vxe-input>
                    </template>
                </vxe-form-item>
                <vxe-form-item title="計劃單日期" field="PlanDateFrom" span="12" :item-render="{}">
                    <template #default="{ data }">
                        <vxe-input v-model="data.PlanDateFrom" type="date" style="width:40%"></vxe-input>
